<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="localization_type"
        android:title="@string/pref_localization_list"
        android:entries="@array/pref_loc_entries"
        android:entryValues="@array/pref_loc_entries_values"
        android:defaultValue="1"/>

    <EditTextPreference
        android:key="localization_knn"
        android:title="Naheste Nachbarn"
        android:summary="Anzahl der nahesten zu suchenden Nachbarn"
        android:defaultValue="3"/>

</PreferenceScreen>
