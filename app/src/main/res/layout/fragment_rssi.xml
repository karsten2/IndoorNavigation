<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.indoornavigation.View.RssiFragment"
    android:padding="15dp">

    <Button
        android:id="@+id/btnAddFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:text="@string/basisstation_ausw_hlen" />

    <TextView
        android:id="@+id/txtFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="@string/ausgew_hlte_basisstation"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDistance"
        android:hint="@string/rssi_distance_est"
        android:layout_gravity="center_horizontal"
        android:inputType="number"
        android:layout_weight="0" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtNumber"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:text="@string/starte_messung" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pbar"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0"
        android:visibility="invisible" />

</LinearLayout>

